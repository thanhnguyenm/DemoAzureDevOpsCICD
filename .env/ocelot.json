{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/user/",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "webapi2",
          "Port": 7148
        },
        //For load balance
        {
          "Host": "webapi4",
          "Port": 7036
        }
      ],
      "UpstreamPathTemplate": "/user-api/",
      "UpstreamHttpMethod": [ "Get" ],
      "LoadBalancerOptions": {
        "Type": "LeastConnection" //or [RoundRobin, NoLoadBalancer, CookieStickySessions]
      },
      "Key": "all-users"
    },
    {
      "DownstreamPathTemplate": "/api/user/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "webapi2",
          "Port": 7148
        }
      ],
      "UpstreamPathTemplate": "/user-api/{everything}",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "DownstreamPathTemplate": "/api/product/",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "webapi3",
          "Port": 7130
        }
      ],
      "UpstreamPathTemplate": "/product-api/",
      "UpstreamHttpMethod": [ "Get" ],
      "Key": "all-products"
    },
    {
      "DownstreamPathTemplate": "/api/product/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "webapi3",
          "Port": 7130
        }
      ],
      "UpstreamPathTemplate": "/product-api/{everything}",
      "UpstreamHttpMethod": [ "Get" ]
    },
    //Private Service
    {
      "DownstreamPathTemplate": "/api/permission/",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "webapi2",
          "Port": 7148
        }
      ],
      "UpstreamPathTemplate": "/permission-api/",
      "UpstreamHttpMethod": [ "Get" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/permission/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "webapi2",
          "Port": 7148
        }
      ],
      "UpstreamPathTemplate": "/permission-api/{everything}",
      "UpstreamHttpMethod": [ "Get" ]
    },
    //Authen service
    {
      "DownstreamPathTemplate": "/api/authen/",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "authenservice",
          "Port": 7149
        }
      ],
      "UpstreamPathTemplate": "/authen-api/",
      "UpstreamHttpMethod": [ "Post" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://getwayapi:7030"
  },
  "Aggregates": [
    {
      "UpstreamPathTemplate": "/",
      "RouteKeys": [
        "all-products",
        "all-users"
      ]
    }
  ],
  "RateLimitOptions": {
   "ClientWhiteList": [],
   "EnableRateLimiting": true,
   "Period": "15s",
   "PeriodTimeSpan": 1,
   "Limit": 1
  },
  "FileCacheOptions": {
    "TtlSeconds": 15,
    "Region": "userfiles"
  },
  "QosOptions": {
    "ExceptionsAllowedBeforeBreaking": 2,
    "DurationOfBreak": 5000,
    "TimeoutValue":  2000
  }
}
